<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="@drawable/tampilanhome">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp">

        <TextView
            android:id="@+id/txtrp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rp "
            android:textSize="30dp"
            android:textColor="@color/hitam"
            android:textStyle="bold">

        </TextView>

        <TextView
            android:id="@+id/txtsaldo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="50.000"
            android:textSize="30dp"
            android:textColor="@color/hitam"
            android:textStyle="bold"
            android:layout_toRightOf="@id/txtrp">

        </TextView>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Current balance"
            android:layout_below="@id/txtrp"
            android:textSize="15dp"
            android:textColor="@color/hitam"
            android:textStyle="bold">

        </TextView>

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/card_view_pay"
            android:layout_toLeftOf="@id/relative_topup"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="Pay"
                android:textColor="@color/putih"
                android:textStyle="bold">

            </TextView>

        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/relative_topup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/card_view_topup"
            android:layout_alignParentRight="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Top Up"
                android:textSize="15dp"
                android:textStyle="bold"
                android:textColor="@color/putih"
                android:layout_centerInParent="true">

            </TextView>

        </RelativeLayout>

    </RelativeLayout>


    <HorizontalScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"

        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="20dp">


            <RelativeLayout
                android:id="@+id/card_cloud"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_home"
                >

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/card_transfer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_home"
                android:layout_marginLeft="30dp">

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/card_promo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_home"
                android:layout_marginLeft="30dp">

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/card_qr"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/shape_home"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="50dp">

            </RelativeLayout>

        </LinearLayout>



    </HorizontalScrollView>



</RelativeLayout>