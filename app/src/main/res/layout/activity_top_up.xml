<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".TopUp"
    android:background="@drawable/tampilantopup">

    <LinearLayout
        android:id="@+id/layout_voucher"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/custom_button_voucher"
        android:layout_centerInParent="false"
        android:layout_marginLeft="70dp"
        android:layout_marginRight="0dp"
        android:layout_marginTop="360dp">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Your voucher code"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="20dp"
            android:layout_marginRight="70dp"
            >

        </TextView>

    </LinearLayout>

            <RelativeLayout
                android:layout_below="@id/layout_voucher"
                android:layout_marginTop="20dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="70dp">

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:background="@drawable/custom_button"
                        android:text="Send"
                        android:textSize="12dp"
                        android:layout_marginRight="20dp"
                        android:textAllCaps="false">

                    </Button>

                    <Button
                        android:layout_width="70dp"
                        android:layout_height="30dp"
                        android:background="@drawable/cstom_button_cancel_topup"
                        android:textAllCaps="false"
                        android:textSize="12dp"
                        android:text="Cancel">

                    </Button>

                </LinearLayout>

            </RelativeLayout>

</RelativeLayout>